{{#image}}<img src='{{image}}' class='thumbnail'/>{{/image}}
<style type="text/css">
.obs-buildstatus { display: inline-block; padding: 0.2em; float: left; border-top: 1px dotted #ccc;}
.obs-buildstatus:nth-child(2) { border-left: 1px dotted #ccc; border-right: 1px dotted #ccc;}
.obs-status-red { color: #c00; }
.obs-status-green { color: #690;}
.obs-status-grey { color: #ccc; }
</style>
<h4><a style="color: #690;" href='{{link}}' target='_blank'>{{title}}</a></h4>
<p>{{description}}</p>
{{#request}}
<p>
<span>Created by <a href='{{author_link}}' target='_blank'>{{author_name}}</a></span>
<span style='float:right;'>{{fuzzy_time}}</span>
</p>
{{/request}}
<ul style="display: block; list-style-type: none; padding: 0; width: 600px;">
{{#packages}}
<li style="display:block; width: 100%">
<ul style="list-style-type: none; padding: 0; width: 100%">
<li class="obs-buildstatus" style="width: 30%">
<a href='{{repo_uri}}' target='_blank' style="color: #069;">{{repo}}</a>
</li>
<li class="obs-buildstatus" style="width: 10%; padding-left: 1.2em; background: url(https://build.opensuse.org/assets/icons_sprite-2409a577c5e87bec19ab326b71b9cf800ff3e9a8528f5e81037f01d2c58b8fc4.png) -422px -377px no-repeat;">
{{arch}}
</li>
<li class="obs-buildstatus" style="border-right: none; width: 30%;">
<a class="{{status_class}}" href='{{buildlog}}' target='_blank'>{{buildstatus}}</a>
</li>
</ul>
</li>
{{/packages}}
</ul>
